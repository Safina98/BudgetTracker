<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <solid android:color="#199fff"/>
    <gradient
        android:centerX="50%"
        android:centerY="50%"
        android:gradientRadius="50%"
        android:startColor="#E1F5FE"
        android:endColor="#CAC1EA"
        android:type="radial" />
    <!--
android:angle="45"
        android:centerColor="#FFCDD2"
        android:centerX="60%"
        android:endColor="#DCEDC8"
        android:startColor="#F8BBD0"
        android:type="radial"
    -->
    <size
        android:width="72dp"
        android:height="72dp"/>
    <padding
        android:top="16dp"
        android:left="16dp"
        android:bottom="16dp"
        android:right="16dp"
        />

</shape>
    </item>
    <item
        android:height="10dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient
                android:angle="45"
                android:centerColor="#1A237E"
                android:centerX="50%"
                android:endColor="#0D47A1"
                android:startColor="#242532"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:width="10dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient
                android:angle="45"
                android:centerColor="#1A237E"
                android:centerX="50%"
                android:endColor="#0D47A1"
                android:startColor="#242532"
                android:type="linear" />

        </shape>
    </item>
</layer-list>
